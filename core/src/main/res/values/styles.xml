<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:padding">19dp</item>
        <item name="background">@drawable/btn_background</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textAppearance">@style/Regular</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_corner_radius</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Regular</item>
        <item name="android:padding">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

</resources>
