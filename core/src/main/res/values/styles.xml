<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg_black</item>
        <item name="android:navigationBarColor">@color/dark_blue_light</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">19dp</item>
        <item name="background">@drawable/btn_background</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Title">
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>

</resources>
