<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/btn_background</item>
        <item name="rippleColor">@color/btn_ripple_color</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:padding">@dimen/button_content_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textAppearance">@style/Regular</item>
        <item name="shapeAppearance">@style/DefaultShapeAppearance</item>
    </style>

    <style name="DefaultShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Regular</item>
        <item name="android:padding">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ScrollView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

</resources>
