<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_movies_graph"
    app:startDestination="@id/favorite_movies">

    <fragment
        android:id="@+id/favorite_movies"
        android:name="com.lockwood.themoviedb.movies.presentation.ui.favorite.FavoriteMoviesFragment">
        <action
            android:id="@+id/open_movie"
            app:destination="@id/movie" />
    </fragment>

    <fragment
        android:id="@+id/movie"
        android:name="com.lockwood.themoviedb.movies.presentation.ui.MovieFragment">
        <argument
            android:name="movieIdArg"
            app:argType="integer" />
    </fragment>

</navigation>