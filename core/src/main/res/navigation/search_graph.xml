<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_graph"
    app:startDestination="@id/movies_list">

    <fragment
        android:id="@+id/movies_list"
        android:name="com.lockwood.themoviedb.movies.presentation.ui.list.MoviesFragment">
        <action
            android:id="@+id/open_movie"
            app:destination="@id/movie" />
    </fragment>

    <fragment
        android:id="@+id/movie"
        android:name="com.lockwood.themoviedb.movies.presentation.ui.MovieFragment">
        <action
            android:id="@+id/open_movies"
            app:destination="@id/movies_list" />
    </fragment>

</navigation>