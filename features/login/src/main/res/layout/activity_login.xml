<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockwood.themoviedb.login.presentation.ui.LoginActivity">

    <fragment
        android:id="@+id/login_container"
        android:name="com.lockwood.themoviedb.login.presentation.ui.LoginFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_content_margin"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_marginEnd="@dimen/default_content_margin"
        android:layout_marginBottom="@dimen/margin_regular"
        tools:layout="@layout/fragment_login" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/login_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/AppTheme"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>