<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockwood.themoviedb.login.presentation.ui.LoginActivity">

    <include
        android:id="@+id/movie_appbar"
        layout="@layout/include_login_appbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <TextView
            android:id="@+id/textView"
            style="@style/Title.Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_content_margin"
            android:layout_marginEnd="@dimen/default_content_margin"
            android:text="@string/title_make_pin"
            android:textSize="@dimen/text_size_title_small"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="12"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_pin_digit"
            tools:spanCount="3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>