<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_welcome" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:fontFamily="@font/roboto"
            android:text="@string/title_login_hint"
            android:textColor="@color/light"
            android:textSize="@dimen/text_size_regular" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_big">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loginEditText"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_input_hint_login"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/gray_light">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditText"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_input_hint_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/errorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/roboto"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_regular"
            android:visibility="gone"
            tools:text="@string/title_invalid_login_or_password_error"
            tools:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/signInButton"
        style="@style/Button.Actionable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="@string/title_sign_in"
        tools:enabled="true" />

</FrameLayout>