<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_extra_big"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/favorite_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_content_margin"
        android:layout_marginTop="@dimen/title_margin"
        android:layout_marginEnd="@dimen/default_content_margin"
        android:paddingBottom="@dimen/margin_extra_big"
        android:text="@string/title_favorite"
        android:textAppearance="@style/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- region Empty favorite movies title -->
    <TextView
        android:id="@+id/favorite_title_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_content_margin"
        android:layout_marginEnd="@dimen/default_content_margin"
        android:text="@string/title_favorite_empty"
        android:textAppearance="@style/Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_title" />

    <TextView
        android:id="@+id/favorite_title_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_content_margin"
        android:layout_marginTop="@dimen/margin_regular"
        android:text="@string/title_favorite_search"
        android:textAppearance="@style/Medium"
        android:textColor="@color/purple"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_title_empty" />
    <!-- endregion -->

    <ImageView
        android:id="@+id/favorite_image_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/movies_background_image_margin"
        android:layout_marginTop="@dimen/movies_background_image_margin"
        android:layout_marginEnd="@dimen/movies_background_image_margin"
        android:layout_marginBottom="@dimen/movies_background_image_margin"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_movie_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_title_search"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>