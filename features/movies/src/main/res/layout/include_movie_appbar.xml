<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_appbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:paddingStart="@dimen/default_content_margin"
    android:paddingEnd="@dimen/default_content_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/movie_back_button"
        android:layout_width="@dimen/appbar_icon_size"
        android:layout_height="@dimen/appbar_icon_size"
        android:layout_gravity="start|center"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_left"
        android:tint="@color/search_appbar_icons_color"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/movie_favorite_button"
        android:layout_width="@dimen/appbar_icon_size"
        android:layout_height="@dimen/appbar_icon_size"
        android:layout_gravity="end|center"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_favorite_border"
        android:tint="@color/search_appbar_icons_color"
        tools:ignore="ContentDescription" />

</FrameLayout>