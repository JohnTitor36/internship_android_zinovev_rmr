<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/default_content_margin"
    android:paddingTop="@dimen/margin_small"
    android:paddingEnd="@dimen/default_content_margin"
    android:paddingBottom="@dimen/margin_small">

    <ImageView
        android:id="@+id/item_movie_image"
        android:layout_width="@dimen/item_movie_list_image_width"
        android:layout_height="@dimen/item_movie_list_image_height"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_poster_placeholder" />

    <TextView
        android:id="@+id/item_movie_title"
        style="@style/MovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_movie_image"
        app:layout_constraintTop_toTopOf="@+id/item_movie_image"
        tools:text="Удивительное путешествие до..." />

    <TextView
        android:id="@+id/item_movie_eng_title"
        style="@style/MovieTitle.Original"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_title"
        tools:text="Dolittle (2020)" />

    <TextView
        android:id="@+id/item_movie_genres"
        style="@style/TitleGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_eng_title"
        tools:text="фэнтези, боевик, комедия" />

    <TextView
        android:id="@+id/item_movie_vote_average"
        style="@style/TitleVoteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_movie_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_genres"
        app:layout_constraintVertical_bias="1.0"
        tools:text="6.1" />

    <TextView
        android:id="@+id/item_movie_popularity"
        style="@style/TitleRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_movie_vote_average"
        app:layout_constraintEnd_toStartOf="@+id/item_movie_duration_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_movie_vote_average"
        app:layout_constraintTop_toTopOf="@+id/item_movie_vote_average"
        app:layout_constraintVertical_bias="0.8"
        tools:text="4 832" />

    <ImageView
        android:id="@+id/item_movie_duration_image"
        android:layout_width="@dimen/item_movie_time_icon_size"
        android:layout_height="@dimen/item_movie_time_icon_size"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_movie_duration_title"
        app:layout_constraintEnd_toStartOf="@+id/item_movie_duration_title"
        app:layout_constraintTop_toTopOf="@+id/item_movie_duration_title"
        app:srcCompat="@drawable/ic_access_time" />

    <TextView
        android:id="@+id/item_movie_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TitleDuration"
        app:layout_constraintBottom_toBottomOf="@+id/item_movie_vote_average"
        app:layout_constraintEnd_toEndOf="@+id/item_movie_genres"
        app:layout_constraintTop_toTopOf="@+id/item_movie_vote_average"
        tools:text=" 91 мин" />

</androidx.constraintlayout.widget.ConstraintLayout>