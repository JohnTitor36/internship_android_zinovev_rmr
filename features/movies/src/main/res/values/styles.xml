<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.TextInputLayout.Search" parent="ThemeOverlay.TextInputLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="boxBackgroundColor">@color/search_appbar_color</item>
        <item name="hintTextColor">@color/search_appbar_icons_color</item>
        <item name="boxStrokeColor">@color/search_appbar_color</item>
        <item name="hintEnabled">false</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/search_appbar_icons_color</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.Search" parent="ThemeOverlay.TextInputEditText">
        <item name="drawableTint">@color/search_appbar_icons_color</item>
        <item name="android:textColor">@color/light_transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textAutoCorrect</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="RecyclerView.Clear">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MovieTitle.Original">
        <item name="android:textAppearance">@style/Regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TitleGenres" parent="MovieTitle.Original">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="TitleVoteAverage" parent="MovieTitle">

    </style>

    <style name="TitleRating" parent="MovieTitle.Original">

    </style>

    <style name="TitleDuration" parent="MovieTitle.Original">
        <item name="android:textColor">@color/light</item>
    </style>

</resources>